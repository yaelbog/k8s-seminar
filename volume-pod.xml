apiVersion: v1 # K8S API Version
kind: Pod  # Object Type
metadata: 
 name: pod-vol 
spec:
  containers: # NOTE THAT BELOW HERE WE CAN ADD AS MANY CONTAINERS WE WISH TO ENCAPSULATE IN THE SAME POD
    - name: app1 
      image: supergiantkir/animals:bear
      volumeMounts:
        - name: app-storage
          mountPath: /storage
      ports: 
      - containerPort: 80
    - name: app2
      image: yanivomc/spring-music:latest
      volumeMounts:
        - name: app-storage
          mountPath: /storage
      ports: 
      - containerPort: 8080
  nodeSelector:
    env: prod
  volumes:
    - name: app-storage
      emptyDir: {}
